<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MainFragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <com.example.yanfa.widget.NewCardView
            android:id="@+id/cardView_yanfa"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textView_group">

            <ImageView
                android:id="@+id/imageView_cardView_yanfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_is_blank"
                android:src="@drawable/logo_b" />


        </com.example.yanfa.widget.NewCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group"
            android:textColor="#000000"
            android:textSize="22sp"
            android:id="@+id/textView_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.38" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:id="@+id/center_line"
            app:layout_constraintVertical_bias="0.42"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="0.1dp"
            android:layout_height="0.1dp"
            android:id="@+id/buttom_center"
            app:layout_constraintTop_toBottomOf="@+id/center_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.example.yanfa.widget.NewCardView
            android:id="@+id/cardView_android"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/center_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/buttom_center"
            app:layout_constraintBottom_toTopOf="@id/buttom_center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:clickable="true"
                android:id="@+id/imageView_cardView_android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/android"
                android:contentDescription="@string/image_is_blank"
                android:focusable="true" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorCardTransparent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:text="@string/android"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp" />
            </FrameLayout>
        </com.example.yanfa.widget.NewCardView>

        <com.example.yanfa.widget.NewCardView
            android:id="@+id/cardView_java"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttom_center"
            app:layout_constraintRight_toLeftOf="@id/buttom_center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/imageView_cardView_java"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/java"
                android:contentDescription="@string/image_is_blank"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorCardTransparent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:text="@string/service"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp" />
            </FrameLayout>
        </com.example.yanfa.widget.NewCardView>

        <com.example.yanfa.widget.NewCardView
            android:id="@+id/cardView_web"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttom_center"
            app:layout_constraintLeft_toRightOf="@id/buttom_center"
            android:layout_marginStart="8dp">
            <ImageView
                android:id="@+id/imageView_cardView_web"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/web"
                android:contentDescription="@string/image_is_blank"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorCardTransparent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:text="@string/web"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp" />
            </FrameLayout>
        </com.example.yanfa.widget.NewCardView>

        <com.example.yanfa.widget.NewCardView
            android:id="@+id/cardView_data"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/center_line"
            app:layout_constraintLeft_toLeftOf="@id/buttom_center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttom_center"
            android:layout_marginStart="8dp">
            <ImageView
                android:id="@+id/imageView_cardView_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/big_data"
                android:contentDescription="@string/image_is_blank" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorCardTransparent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:text="@string/big_data"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp" />
            </FrameLayout>
        </com.example.yanfa.widget.NewCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>